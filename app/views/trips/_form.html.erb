<h1><%= @trip.id ? 'Edit Trip' : 'Create Trip' %></h1>
<hr />
<%= form_for @trip do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <%= f.label :start_date %>
  <%= f.datetime_field :start_date, required: true %>
  <%= f.label :end_date %>
  <%= f.datetime_field :end_date, required: true %>
  <%= f.submit %>
<%end%>

<%= link_to 'Back', trips_path %>
